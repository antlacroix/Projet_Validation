            </th>
            <th>
                Date de fin
            </th>
            <th>
                <u> @Html.ActionLink("Create Seance", "CreateSeance")</u>
            </th>
        </tr>

        @foreach (var item in Model.seances.OrderBy(x => x.date_debut))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.titre_seance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date_debut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date_fin)
                </td>
                <td>
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditSeance", new { id = item.id }, htmlAttributes: new
                    {
                   style = "background: url('../../Image/edit.png'); display:block; height:24px; width:24px;",
                   @class = "text-hide"
               })
                    @Html.ActionLink("Delete", "DeleteSeance", new { id = item.id }, htmlAttributes: new
                    {
                   style = "background: url('../../Image/delete.png'); display:block; height:24px; width:24px;",
                   @class = "text-hide"
               })
