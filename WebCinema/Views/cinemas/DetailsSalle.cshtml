        </th>
        <th>
            Film
        </th>
        <th>
            @Html.ActionLink("Create Seance", "CreateSeance")
        </th>
    </tr>

    @foreach (var item in Model.seances)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titre_seance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_debut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_fin)
            </td>
            <td>
            </td>
            <td>
                @Html.ActionLink("Edit", "EditSeance", new { id = item.id }) |
                @Html.ActionLink("Details", "DetailsSeance", new { id = item.id }) |
