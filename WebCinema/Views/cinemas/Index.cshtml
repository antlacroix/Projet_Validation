@model IEnumerable<ModelCinema.Models.cinema>

@{
    ViewBag.Title = "Index Cinema";
}

<h2>Cinema</h2>


@if (TempData.ContainsKey("Alert"))
{
    <div class="alert alert-danger" role="alert">@TempData["Alert"]</div>
}
<div class="transbox">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cinema_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contact_info.adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contact_info.tel_number)
            </th>
            <th>
                Responsable
            </th>
            <th>
                <u>
                    @Html.ActionLink("Create Cinema", "Create")
                </u>
            </th>
            <th></th>
        </tr>



        @foreach (var item in Model)
        {

            char[] t = item.contact_info.tel_number.ToArray();
            string phone = "(" + t[0] + t[1] + t[2] + ") " + t[3] + t[4] + t[5] + "-" + t[6] + t[7] + t[8] + t[9];

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cinema_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.contact_info.adresse)
                </td>
                <td>
                    @phone
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.user.name)
                </td>
                <td>
                    <table class="sub-table">
                        <tr>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new
                           {
                               style = "background: url('../Image/edit.png'); display:block; background-size: 36px 36px; height:36px; width:36px;",
                               @class = "text-hide"
                           })
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.id }, new
                           {
                               style = "background: url('../Image/eye.png'); display:block; background-size: 36px 36px; height:36px; width:36px;",
                               @class = "text-hide"
                           })
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        }
    </table>
</div>


<button onclick="topFunction()" id="myBtn" title="Go to top">Back to Top</button>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        var mybutton = document.getElementById("myBtn");

        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
        }

        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }

    </script>
}